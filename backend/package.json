  "scripts": {
    "dev": "nodemon --exec ts-node/esm --transpile-only server.ts",
    "local": "nodemon server.ts",
    "pgn": "prisma migrate dev && prisma db push && prisma generate",
    "gbs": "ts-node-transpile-only scripts/generateGqlSchemas.ts",
