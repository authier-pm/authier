  "scripts": {
    "dev": "DEBUG=au:* pnpm nodemon --exec ts-node-transpile-only server.ts",
    "killNodemon": "kill $(lsof -t -i:5051)",
    "local": "nodemon server.ts",
    "pgn": "pnpm prisma migrate dev && pnpm prisma db push && prisma generate",
    "gbs": "ts-node-transpile-only scripts/generateGqlSchemas.ts",
    "prisma:dev": "prisma migrate dev && pnpm test:prepare",
    "prisma:deploy": "prisma migrate deploy",
    "build": "rm -rf dist && pnpm bundle && ts-node scripts/copyToDist.ts",
    "bundle": "ts-node-transpile-only scripts/bundleLambda.ts",
    "studio": "prisma studio",
    "dbPush": "prisma db push",
    "gen": "prisma generate",
    "tsc": "tsc",
    "start": "prisma migrate deploy && node server.js",
    "tar": "tar -czvf authier-api.tar.gz -C ./dist .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "NODE_ENV=test pnpm vitest",
    "test:prepare": "NODE_ENV=test pnpm ts-node scripts/prepareTestDBs",
    "test:docker": "pnpm docker:up && DATABASE_URL=postgresql://authier:auth133r@localhost:6432/authier && pnpm prisma db push && jest -i && pnpm docker:down",
    "dbReset": "prisma migrate reset --preview-feature",
    "cdk": "cdk deploy",
    "cdkDeploy": "pnpm build && cdk deploy",
    "removeTestAccounts": "pnpm ts-node scripts/removeTestAccounts"
  }
