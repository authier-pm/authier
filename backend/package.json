    "build": "rm -rf dist && tsc && node scripts/build.js && yarn tar",
    "deploy": "caprover deploy -t authier-api.tar.gz",
    "buildAndDeploy": "yarn build && yarn deploy",
    "DbPush": "prisma db push",
    "generate": "SKIP_PRISMA_VERSION_CHECK=1 prisma generate",
    "postinstall": "SKIP_PRISMA_VERSION_CHECK=1 prisma generate",
    "test": "jest",
    "tsc": "tsc",
    "start": "prisma migrate deploy && prisma generate && node server.js",
    "tar": "tar -czvf authier-api.tar.gz -C ./dist ."
  }
