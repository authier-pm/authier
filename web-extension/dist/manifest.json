{
  "manifest_version": 3,
  "name": "Authier",
  "description": "Authier chrome extension",
  "version": "1.0.15",
  "action": {
    "default_icon": "icon-16.png",
    "default_popup": {
      "href": "js/popup.html"
    }
  },
  "background": {
    "service_worker": "js/backgroundPage.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        {
          "src": "js/browser-polyfill.js",
          "all_frames": true
        },
        {
          "src": "js/contentScript.js",
          "all_frames": true
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "icon-16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "icon-48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "icon-128.png",
      "sizes": "128x128",
      "type": "image/png"
    }
  ],
  "host_permissions": ["*://*/*"],
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": [
        {
          "file": "icon-16.png",
          "mime_type": "image/png"
        }
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
