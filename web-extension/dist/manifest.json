{
  "manifest_version": 2,
  "name": "Authier",
  "version": "1.1.0",
  "description": "Authier password manager firefox extension",
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_popup": "js/popup.html"
  },
  "background": {
    "page": "js/backgroundPage.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/browser-polyfill.js", "js/contentScript.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/",
    "<all_urls>"
  ],
  "web_accessible_resources": ["icon-16.png"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; https://www.googleapis.com https://js.stripe.com/v3 https://*.firebaseio.com; object-src 'self'"
}
