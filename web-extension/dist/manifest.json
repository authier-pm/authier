{
  "manifest_version": 3,
  "name": "Authier",
  "description": "Authier chrome extension",
  "version": "1.0.15",
  "action": {
    "default_icon": "icon-16.png",
    "default_popup": "js/popup.html"
  },
  "background": {
    "service_worker": "js/backgroundPage.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["js/browser-polyfill.js", "js/contentScript.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "host_permissions": ["*://*/*"],
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["icon-16.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
