{
  "manifest_version": 2,
  "name": "Authier",
  "description": "Authier chrome extension",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/backgroundPage.js", "firebase-messaging-sw.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "storage",
    "http://*/",
    "https://*/",
    "system.network",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/8.2.0/firebase-app.js https://www.gstatic.com/firebasejs/8.2.0/firebase-messaging.js https://www.googleapis.com https://*.firebaseio.com; object-src 'self'"
  
}
