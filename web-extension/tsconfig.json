{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["../shared/*"],
      "@util/*": ["src/util/*"]
    },
    "target": "ES2015",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "node",
    "rootDir": "../../authier",
    "outDir": "dist/js",
    "strict": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "lib": ["es2021", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "incremental": true,
    "noImplicitAny": false
  },
  "exclude": ["../backend/**", "dist/**"],
  "include": ["./src/**/*", "../shared/**/*"]
}
