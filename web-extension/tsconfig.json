{
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "chrome"
    ],
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@shared/*": [
        "../shared/*"
      ]
    },
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "../../authier",
    "outDir": "dist/js",
    "strict": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "esModuleInterop": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "incremental": true,
    "noImplicitAny": false
  },
  "exclude": [
    "../backend/**",
    "dist/**"
  ],
  "include": [
    "./src/**/*",
    "../shared/**/*"
  ]
}
